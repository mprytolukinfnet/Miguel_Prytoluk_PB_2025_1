{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::silver-bucket",
                "arn:aws:s3:::gold-bucket"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": [
                "arn:aws:s3:::silver-bucket/*",
                "arn:aws:s3:::gold-bucket/*"
            ]
        }
    ]
}